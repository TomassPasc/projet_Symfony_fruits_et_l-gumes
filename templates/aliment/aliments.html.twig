{% extends 'base.html.twig' %}

{% block title %}Les aliments{% endblock %}

{% block monTitre %}Liste des aliments
    {% if isCalorie %}
        ayant moins de 50 calories
    {% elseif isGlucide %}
        ayant moins de 10 glucides
    {% endif %}
{% endblock %}




{% block body %}
    <a href="{{path("aliments")}}" class="btn btn-primary">Tous les aliments</a>
    <a href="{{path("alimentsParCalorie", {"calorie":50})}}" class="btn btn-primary">Aliments contenant moins de 50 calories</a>
    <a href="{{path("alimentsParGlucide", {"glucide":10})}}" class="btn btn-primary">Aliments contenant moins de 10 glucides</a>
    <div class="row">
        {% for aliment in aliments %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-primary mb-3 mx-auto">
                    <div class="card-header text-center">
                        <img src="{{asset('images/aliments/' ~ aliment.image)}}" class="perso_imgAliment card-img-top">
                    </div>
                    <div class="card-body">
                        <h3><a href="{{path("afficher_un_aliment", {"id":aliment.id})}}" class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{aliment.nom}}</a></h3>
                        <p class="card-text">
                            <h4 class="text-center"> Prix (kilo) : {{aliment.prix}}</h4>
                            <h4 class="text-center"> Type : {{aliment.type.libelle}}</h4>
                            <table class="table text-center">
                                <tr class="table-primary">
                                    <td>Propriété</td>
                                    <td>Valeur (100g)</td>
                                </tr>
                                <tr>
                                    <td>Calorie</td>
                                    <td>{{ aliment.calorie }}</td>
                                </tr>
                                <tr>
                                    <td>Protéines</td>
                                    <td>{{ aliment.proteine }}</td>
                                </tr>
                                <tr>
                                    <td>Glucides</td>
                                    <td>{{ aliment.glucide }}</td>
                                </tr>
                                <tr>
                                    <td>Lipides</td>
                                    <td>{{ aliment.lipide }}</td>
                                </tr>
                            </table>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    
    



{% endblock %}
